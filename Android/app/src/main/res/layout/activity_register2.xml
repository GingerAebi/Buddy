<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buddyThemeColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".register.Register2Activity">

    <TextView
        android:id="@+id/textView_r2_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingRight="5dp"
        android:text=" (     )  你好"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_r2_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_r2_hello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="\@.com"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView_r2_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="上传简历"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_r2_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/r2_photo_upload_btn"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <ImageView
        android:id="@+id/imageView_r2_women"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView_r2_photo"
        android:layout_alignStart="@+id/imageView_r2_photo"
        android:layout_alignTop="@+id/imageView_r2_man"
        android:src="@drawable/r2_women_btn" />

    <ImageView
        android:id="@+id/imageView_r2_man"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView_r2_photo"
        android:layout_alignRight="@+id/imageView_r2_photo"
        android:layout_below="@+id/imageView_r2_photo"
        android:layout_marginRight="5dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/r2_man2_btn" />

    <EditText
        android:id="@+id/editText_r2_birth"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_r2_women"
        android:layout_centerHorizontal="true"
        android:hint="生日（例： 951213）"
        android:inputType="date"
        android:textColorHint="@color/hintColor"
        android:theme="@style/Theme.Buddy.EditText"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/imageButton_r2_next"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@+id/editText_r2_birth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_register"
        android:clickable="false" />

</RelativeLayout>
