<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial.Tutorail1Fragment">


    <ImageView
        android:id="@+id/imageView_tutorial1_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/t1_backgournd" />

    <ImageView
        android:id="@+id/imageView_tutorial1_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView_tutorial1_buddy"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView_tutorial1_buddy"
        android:layout_marginTop="116dp"
        android:src="@drawable/t1_logo" />

    <ImageView
        android:id="@+id/imageView_tutorial1_buddy"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView_tutorial1_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/t1_buddy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_tutorial1_buddy"
        android:layout_centerHorizontal="true"
        android:text="Friends all over the world"
        android:textColor="@color/buddyThemeText" />

    <ImageView
        android:id="@+id/imageView_tutorial1_start_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView_tutorial1_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/t1_start_btn" />

    <TextView
        android:id="@+id/textView_tutorial1_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/login_string"
        android:textColor="@color/buddyThemeColor" />

</RelativeLayout>
